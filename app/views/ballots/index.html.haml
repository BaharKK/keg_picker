%h1 All Votes
.row
  .col-xs-12
    .chart
      = pie_chart Poll.last.ballots.joins(:beer).group('beers.brand').count
      Total number of votes: #{ Poll.last.ballots.count }
%table.table.table-striped
  %tbody
    %tr
      %td
        Keg
      %td
        Voter
    -@ballots.each do |ballot|
      %tr
        %td
          #{ ballot.beer.brand }
        %td
          #{ ballot.user.username }
        %td
          =link_to "change", edit_ballot_path(ballot)
        %td
          =link_to "delete", ballot_path(ballot), method: :delete, data: { confirm: "Are you sure you want to delete you ballot?" }

.action-links
  = link_to "Back", beers_path, class: "btn btn-lg btn-default pull-right"
