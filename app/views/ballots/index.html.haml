%h1 All Votes
.row
  .col-xs-12
    .charts
      =link_to 'Another Chart', ballots_path, id: "change_chart"
      .chart.active
        = column_chart Ballot.group(:beer_id).count, class: "chart"
      .chart
        = pie_chart Ballot.group(:beer_id).count
%table.table.table-striped
  %tbody
    %tr
      %td
        Keg
      %td
        Voter
    -@ballots.each do |ballot|
      %tr
        %td
          #{ ballot.beer.brand }
        %td
          #{ ballot.user.username }
        %td
          =link_to "change", edit_ballot_path(ballot)
        %td
          =link_to "delete", ballot_path(ballot), method: :delete, data: { confirm: "Are you sure you want to delete you ballot?" }

.action-links
  = link_to "Back", beers_path, class: "btn btn-lg btn-default pull-right"
